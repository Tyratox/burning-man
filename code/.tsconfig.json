{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "module": "es6",
    "target": "es6",
    "lib": ["es2015", "es2017", "dom"],
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "typeRoots": ["./src"],
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"]
}
